@{
}
@model IEnumerable<EventEaseBookingSystem.Models.BookingModel>

<h2>Bookings</h2>
<p>Make bookings bellow</p>
<div class="row">
    @foreach (var booking in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@booking.BookingId</h5>
                    <p class="card-text">Event: @booking.EventName</p>
                    <p class="card-text">Venue: @booking.VenueName</p>
                    <p class="card-text">Start: @booking.StartDate.ToShortDateString()</p>
                    <p class="card-text">End: @booking.EndDate.ToShortDateString()</p>
                    <a href="@Url.Action("Edit", new { id = booking.Id })" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>
    }
</div>
