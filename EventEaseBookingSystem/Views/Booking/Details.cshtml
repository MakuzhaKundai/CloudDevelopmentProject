@{
}
@model EventEaseBookingSystem.Models.BookingModel

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<div>
    <h4>Booking ID: @Model.BookingId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Event</dt>
        <dd class="col-sm-10">@Model.Event?.Title</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.VenueName</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("f")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("f")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
