@{
}
@model EventEaseBookingSystem.Models.VenueModel

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>Delete Venue</h2>

<h3>Are you sure you want to delete this venue?</h3>

<div>
    <h4>@Model.VenueName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
